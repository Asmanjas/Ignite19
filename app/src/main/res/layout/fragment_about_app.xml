<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AboutApp.Fragment_AboutApp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout

            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:padding="10dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/aboutTeam"
                android:layout_width="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/igniteSecondaryLight"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >



                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_fav11"
                            android:layout_margin="10dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:textColor="@color/contrasText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ignite'19 App"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                />
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="By NITK MCA"
                                android:textSize="10sp"
                                android:textColor="@color/contrasText"

                                />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        >



                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/person"
                            android:layout_marginLeft="10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <TextView
                                android:textColor="@color/contrasText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Our Team"
                                android:layout_marginLeft="35dp"
                                android:textSize="17dp"
                                android:id="@+id/ourTeam"
                                />
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MCA-II"
                                android:layout_marginLeft="35dp"
                                android:textSize="10dp"
                                android:textColor="@color/contrasText"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        >



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/contrasText"
                            android:layout_height="wrap_content"
                            android:text="National Institute of Technology, Karnataka-Surathkal"
                            android:layout_marginLeft="35dp"
                            android:textSize="17dp"
                            />

                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/openSourceCardbtn"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"

                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:elevation="10dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/igniteSecondaryLight"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:textColor="@color/contrasText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:text="Open Source"
                        android:textSize="20dp"
                        android:textStyle="bold" />







                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        >



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/license"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:textColor="@color/contrasText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="License"
                            android:layout_marginLeft="35dp"
                            android:textSize="20dp"
                            />

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

